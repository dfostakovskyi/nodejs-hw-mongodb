                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200,
                      "description": "Статус запиту"
                    },
                    "message": {
                      "type": "string",
                      "example": "Successfully found contacts!",
                      "description": "Повідомлення про успіх"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "data": {
                          "type": "array",
                          "items": {
                            "type": "object",
                            "properties": {
                              "id": {
                                "type": "string",
                                "description": "Унікальний ідентифікатор контакту",
                                "example": "65e4decdd286b30065d54af9"
                              },
                              "name": {
                                "type": "string",
                                "description": "Ім'я контакту",
                                "example": "John Doe"
                              },
                              "phoneNumber": {
                                "type": "string",
                                "description": "Номер телефону контакту",
                                "example": "+1234567890"
                              },
                              "email": {
                                "type": "string",
                                "description": "Електронна адреса контакту",
                                "example": "johndoe@example.com"
                              },
                              "isFavourite": {
                                "type": "boolean",
                                "description": "Чи є контакт у списку улюблених",
